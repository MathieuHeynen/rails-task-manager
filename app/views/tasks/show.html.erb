<div>
  <h2>Your task detail: <%= @task.title %></h2>
  <p>Details: <%= @task.details %></p>
  <p>Completed: <%= @task.completed %></p>
  <p><%= link_to 'Edit this task', edit_task_path(@task) %></p>
</div>

<%= button_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
